<div class="item item-container itemCategory">
    <div class="category-header">
        <h3 class="item-name">{{localize "SRLabels.pouvoirs"}}</h3>
        {{#ifeq @root.editable true}}
            <div class="item-controls">
                <a class="item-control item-createNPC"><i class="fas fa-fw fa-plus" id="pouvoir-add"></i></a>
            </div>
        {{/ifeq}}
</div>


<ol class="item-list liste-pouvoir liste-pouvoirEsprit">
                {{#each pouvoirs as |pouvoir|}}
                <li class="item pouvoir {{#ifeq pouvoir.system.isUsed true}}used{{/ifeq}}" draggable="true" data-item-id="{{pouvoir._id}}">
                <div class="pouvoir-header">
                        <img src="{{pouvoir.img}}" data-edit="img">
                    <span class="pouvoir-name">
                        {{pouvoir.name}}
                    </span>
                    <div class="item-controls">
                        <a class="item-control pouvoir-use"><i class="fa-solid {{#ifeq pouvoir.system.isUsed false}}fa-check{{/ifeq}}{{#ifeq pouvoir.system.isUsed true}}fa-xmark{{/ifeq}}"></i></a>
                        <a class="item-control pouvoir-chat"><i class="fa-solid fa-dice-d10"></i></a>
                        <a class="item-control item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-control item-delete"><i class="fas fa-fw fa-trash"></i></a>
                    </div>
                </div>
                <div class="résumé">
                    <i>{{localize "SRLabels.résumé"}} : {{pouvoir.system.résumé.value}}
                    {{#ifnoteq pouvoir.system.activation.value ""}}
                    <br/>
                    {{localize "SR.pouvoirActivation"}}: {{pouvoir.system.activation.value}}{{#ifnoteq pouvoir.system.fréquence.value ""}} | {{/ifnoteq}}
                    {{/ifnoteq}}
                    {{#ifnoteq pouvoir.system.fréquence.value ""}}
                        {{#ifeq pouvoir.system.activation.value ""}}<br/>{{/ifeq}}
                    {{localize "SR.pouvoirFréquence"}}: {{pouvoir.system.fréquence.value}}
                    {{/ifnoteq}}
                    </i> 
                </div>
                </li>
                {{/each}}
            </ol>
