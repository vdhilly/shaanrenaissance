{{!-- Image --}}
<div class="npc_frame-container">
    <div class="frame image-container">
        <img class="player-image" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}" data-edit="img" />
    </div>
</div>
{{!-- Nom --}}
<section class="npc_char-details">
    <h1 class="char-name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Nom du Personnage" spellcheck="false" />
    </h1>
</section>
{{!-- race --}}
<div class="npc npc_race item" data-item-id="{{Race._id}}">
    <div class="input">
        <label class="details-label">{{localize "ITEM.TypeRace"}}</label>
        <h3>
            <span class="value">{{Race.name}}</span>
            {{#if @root.editable}}
            {{#if Race}}
                <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
            {{else}}
                <a class="open-compendium" data-compendium="shaanrenaissance.races"><i class="fas fa-fw fa-circle-plus"></i></a>
            {{/if}}
            {{/if}}
        </h3>
    </div>
</div>
